@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

@* Custom error page *@
<h1 class="text-danger">Error</h1>
<hr />
@{
    if (String.IsNullOrEmpty(ViewBag.errorMessage))
    {
        <h2 style="margin-left: 10px;" class="text-danger">An error occurred while processing your request.</h2>
    }
    else
    {
        <h2 style="margin-left: 10px;" class="text-danger">@ViewBag.errorMessage</h2>
    }
}
